#!/usr/bin/env bash

extensions=(${@})


printf -- "================================================================================\n"

printf -- "Attempting to install vscode extensions:\n"

outdir="./install/vscode_extensions"

if [ -d ${outdir} ]; then
    rm -rf $outdir
fi

if [ ! -d ${outdir} ]; then
    mkdir -p $outdir
fi

for ((i = 0; i < ${#extensions[@]}; i += 2)); do
# Install 'remotes' package for versioned installation of other packages
        install_logfile=${outdir}/${packages[$i]}.log
        printf "> %-50s" "${extensions[$i]}"
        (code-server --install-extension  "${extensions[$i]}" \
            >${install_logfile} 2>&1) &&
            {
                printf -- " ... successful!\n" &&
                    rm -rf ${install_logfile}
            } ||
            {
                retval=$?
                printf -- " ... failed:\n" &&
                    sed -i 's/^/\t/' ${install_logfile} &&
                    cat ${install_logfile} &&
                    exit 1
            }
done
